# LS
alias ls "ls --color=always"
alias ll "ls -alF"
alias la "ls -A"
alias l "ls -CF"
alias lslt "ls -lrt"
alias cl "clear"
alias lss "ls -lS"

# Copy/Paste terminal output
alias c "xclip -selection clipboard"
alias v "xclip -o -selection clipboard"
alias cdv "cd `v`"

# Misc
alias open "xdg-open"
alias vim "vimx"
alias pyweb "python -m SimpleHTTPServer &"
alias lhost "firefox --new-tab localhost:8000 &"
alias tmux "tmux -2"


# impossible to remember tar commands
alias tarit "tar -cvzf"
alias untar "tar -xvzf"


